<%- include('../shared/includes/head',{pageTitle: 'Login'})  %> 
<link rel="stylesheet" href="styles/forms.css">
</head>
<body>
    <%- include('../shared/includes/header')  %> 
    <main >
        <h2>Login</h2>
        <% if(inputData.errorMassage) { %>
            <section class="alert">
                <h3>Invalid Input</h3>
                <p><%= inputData.errorMassage %></p>
            </section>
     <% } %>  
        <form class="form" action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%=locals.csrfToken  %>" required>
             <div>
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" value="<%= inputData.email  %>" required>
             </div>
             <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= inputData.password %>"  required>
    
             </div>
             
                 <button class="btn">Login</button>
             </div>
            <a href="/signup">Signup instead.</a>
            
            
        </form>
    </main>
<%-include("../shared/includes/footer")  %> 

</body>
</html>
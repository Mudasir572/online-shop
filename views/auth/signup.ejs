<%- include('../shared/includes/head',{pageTitle: 'Signup'})  %> 
<link rel="stylesheet" href="styles/forms.css">
</head>
<body>
    
        <%- include('../shared/includes/header')  %> 
        
    
    <main>
        <h2>Create Your Account</h2>
        <% if(inputData.errorMassage) { %>
               <section class="alert">
                   <h3>Invalid Input</h3>
                   <p><%= inputData.errorMassage %></p>
               </section>
        <% } %>  
        <form class="form" action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%=locals.csrfToken  %>" required>
             <div>
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>"required>
             </div>
             <div>
                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail  %>" required>
             </div>
             <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%=inputData.password  %>" minlength="6" required>
    
             </div>
             <hr>
             <div>
                <label for="name">Username</label>
                <input type="text" id="name" name="username"value="<%=inputData.userName  %>" required>
            </div>
                <div>
                    <label for="city">City</label>
                    <input type="text" id="city" name="city" value="<%=inputData.city  %>" required>

                </div>
                <div>
                    <label for="postal">Postal Code</label>
                    <input type="number" name="postal" id="postal" value="<%=inputData.postal  %>"  maxlength="5" required>
                </div>
                <div>
                    <label for="street">Street</label>
                    <input type="text" name="street" id="street"value="<%=inputData.street  %>" required>
                </div>
             <div>
                 <button class="btn">Signup</button>
                </div>
                <a href="/login">Login instead.</a>
            
            
            
        </form>
    </main>
</body>
</html>
<form class="form" action="<%= submitPath  %>?_csrf=<%=locals.csrfToken  %>" method="POST" enctype="multipart/form-data">
           
    <div>
       <label for="title">Title</label>
       <input type="text" id="title" name="title" value="<%=product.title  %>" required>
    </div>
    <div id="image-upload-control">

        <div>
            <label for="image">Image</label>
            <input type="file" id="image" name="image"  accept="image/png,image/jpg" <%if(imageRequired){%> required<% } %> >
        </div>
        <img src="" alt="">
    </div>
    <div>
       <label for="summary">Summary</label>
       <input type="text" id="summary" name="summary" value="<%= product.summary%>"  required>

    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%=product.price  %>" required>
    </div>
    <div>
        <label for="discription">Discription</label>
        <input type="text" id="discription" name="discription" value="<%=product.discription  %>" required>
    </div>
    
        <button class="btn">Save</button>
    </div>
   
   
   
</form>
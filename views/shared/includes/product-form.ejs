<form class="form" action="<%= submitPath  %>?_csrf=<%=locals.csrfToken  %>" method="POST" enctype="multipart/form-data">
           
    <div>
       <label for="title">Title</label>
       <input type="text" id="title" name="title" required>
    </div>
    <div>
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/png,image/jpg" required>
    </div>
    <div>
       <label for="summary">Summary</label>
       <input type="test" id="summary" name="summary"  required>

    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" required>
    </div>
    <div>
        <label for="discription">Discription</label>
        <input type="text" id="discription" name="discription" required>
    </div>
    
        <button class="btn">Save</button>
    </div>
   
   
   
</form>